{
  "tasks": {
    "dev": "deno run --watch main.ts",
    "start": "deno run main.ts",
    "test": "deno test --allow-read",
    "serve": "deno run --allow-net --allow-read server.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/http": "jsr:@std/http@1",
    "@std/path": "jsr:@std/path@1"
  },
  "compilerOptions": {
    "allowJs": true,
    "strict": true
  },
  "fmt": {
    "indentWidth": 2,
    "singleQuote": true,
    "semiColons": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
